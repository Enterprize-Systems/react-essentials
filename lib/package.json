{
    "name": "@enterprize/react-essentials",
    "description": "Provides essential structural components like IF, SWITCH and FOROF and helpers such as classList for declarative code.",
    "keywords": [
        "If",
        "Switch",
        "ForOf",
        "Classes",
        "Declarative"
    ],
    "author": "Enterprize Systems <giancarlo.dallemole1995@gmail.com>",
    "private": false,
    "license": "MIT",
    "version": "1.0.0",
    "type": "module",
    "main": "./dist/react-essentials.umd.cjs",
    "module": "./dist/react-essentials.js",
    "exports": {
        ".": {
            "import": "./dist/react-essentials.js",
            "require": "./dist/react-essentials.umd.cjs",
            "types": "./dist/react-essentials.d.ts"
        }
    },
    "scripts": {
        "build": "tsc && vite build",
        "build:dev": "vite build --watch",
        "build:production": "vite --config vite.build.config.ts build",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/node": "^18.16.16",
        "@types/react": "^18.0.37",
        "@types/react-dom": "^18.0.11",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "@vitejs/plugin-react-swc": "^3.0.0",
        "eslint": "^8.38.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.3.4",
        "typescript": "^5.0.2",
        "vite": "^4.3.9",
        "vite-plugin-checker": "^0.6.0",
        "vite-plugin-dts": "^2.3.0",
        "vite-plugin-eslint": "^1.8.1"
    }
}
